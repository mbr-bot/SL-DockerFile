pipeline { 

    environment { 

        registry = "manjunathin/mbr" 

        registryCredential = 'mydocker' 

        dockerImage = '' 

    }

    agent any 

    stages { 

        stage('Clone Repo') { 

            steps { 

                git 'https://github.com/mbr-bot/SL-DockerFile.git' 

            }

        } 

        stage('Building our image') { 

            steps { 

                script { 

                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 

                }

            } 

        }

        stage('Deploy our image') { 

            steps { 

                script { 

                    docker.withRegistry( '', registryCredential ) { 

                        dockerImage.push() 

                    }

                } 

            }

        } 

        stage('Cleaning up') { 

            steps { 

                //sh "docker rmi $registry:$BUILD_NUMBER" 
                sh '''docker rmi $registry:$BUILD_NUMBER'''

            }

        }
      /*  stage('delete existing images and containers')
        {
            steps{
                    sh '''
                        docker rmi manjunathin/mbr:$BUILD_NUMBER -f
                        docker container prune -f
                       '''

                }
        }*/
       /* stage('Pull docker image from hub')
        {
            steps{
                //sh "docker pull manjunathin/mbr:$BUILD_NUMBER" 
                //sh "docker rmi $registry:$BUILD_NUMBER" 

            }
        } */

    }

}